<% book.book_comments.each do |book_comment| %>
 <td>
   <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br >
   <%= book_comment.user.name %>
   <%= book_comment.comment %>
	　　<div>
     <% if book_comment.user == current_user %>
     <%= link_to "Destroy", book_book_comment_path(book_comment.book.id, book_comment.id), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
    </div>
     <% end %>
  <% end %>
 </td>